    <thead>
        <tr>
            <th>N.</th>
            <th>Título</th>
            <th>Descripción</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each tasks}}
            <tr>
                <td>{{@index}}</td>
                <td>{{title}}</td>
                <td>{{description}}</td>
                <td>
                    <button>Done</button>
                    <a href="/delete/{{_id}}">Eliminar</a>
                    <a href="/edit/{{_id}}">Edit</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
    
