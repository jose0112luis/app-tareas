<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white">
                <h1>Editar Tarea</h1>
                <form action="/editTask/{{task._id}}" method="POST">
                    <div class="mb-3">
                        <input type="text" name="title" placeholder="Título" value="{{task.title}}" class="form-control bg-dark text-white">
                    </div>
                    <div class="mb-3">
                        <textarea name="description" rows="3" placeholder="Agregue una descripción" class="form-control bg-dark text-white">{{task.description}}</textarea>
                    </div>
                    <button class="btn btn-success">Actualizar</button>
                </form>
            </div>

        </div>
    </div>
</div>